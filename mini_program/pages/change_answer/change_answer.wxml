<view class='con'>
  <!--总的大框-->
  <view class='con1'>
    <!--密保问题的框-->
    <view class="text1">密保问题：{{question}}</view>
  </view>
  
  <!--密保问题的框结束-->
  <view class='con1'>
    <!--获取答案的框-->
    <view class='text1'>原答案：</view>
    <input class='input1' bindinput='answer'> </input>
  </view>
  <view class='con1'>
    <!--获取答案的框-->
    <view class='text1'>新答案：</view>
    <input class='input1' bindinput='new_answer'> </input>
  </view>
  <view class='con1'>
    <!--获取答案的框-->
    <view class='text1'>确认新答案：</view>
    <input class='input1' bindinput='ensure_new_answer'> </input>
  </view>
  <view>
    <!--确定按钮的组件-->
    <button loading='{{loading}}' disabled='{{disabled}}' class='butt2' bindtap='ensure'>确定</button>
  </view>
   <view class="text2">{{infoMess}}</view>
</view>
<!--最大的框结束-->
